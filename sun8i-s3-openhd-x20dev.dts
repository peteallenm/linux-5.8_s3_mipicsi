/dts-v1/;
#include "sun8i-v3.dtsi"

#include <dt-bindings/gpio/gpio.h>

/ {
	model = "OpenHD X20 Dev";
	compatible = "openhd-x20dev", "sochip,s3",
		     "allwinner,sun8i-v3";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
    
	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		csi0_memory: pool {
			compatible = "shared-dma-pool";
			size = <0x800000>;
			no-align;
			no-map;
		};
    };

	reg_vcc3v3: vcc3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};
};

&pio {
	uart1_pg_pins: uart1-pg-pins {
		pins = "PG6", "PG7";
		function = "uart1";
	};

	uart2_pins: uart2-pins {
		/* TX, RX, RTS, CTS */
		pins = "PB0", "PB1", "PB2", "PB3";
		function = "uart2";
	};

};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "peripheral";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&csi0 {
    status = "okay";
    allwinner,mipi-csi-bps = <300000000>;
    port {
        csi0_ep: endpoint {
            remote-endpoint = <&hdzerocam_0>;
            clock-lanes = <0>;
            data-lanes = <1 2 3 4>;
        };
    };
};

&i2c0 {
	pinctrl-names = "default";
    clock-frequency = <100000>;
	status = "okay";
    /*
    imx219: camera@64 {
        compatible = "imx219";
        reg = <0x64>;
        pinctrl-names = "default";
        port {
			hdzerocam_out_mipi_csi2: endpoint {
				data-lanes = <1 2 3 4>;

				remote-endpoint = <&mipi_csi2_in_hdzerocam>;
			};
        };
    }; */
    
};


&i2c1 {
    status = "okay";
    hdzerocam: camera@64 {
		compatible = "hdzerocam";
		reg = <0x64>;
        pinctrl-names = "default";
        port {
            hdzerocam_0: endpoint {
                remote-endpoint = <&csi0_ep>;
                clock-lanes = <0>;
                data-lanes = <1 2 3 4>;
            };
        };
    };
};



&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&uart1 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pg_pins>;
};

&uart2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	uart-has-rtscts;

};



&usb_otg {
    dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det = <&pio 6 9 GPIO_ACTIVE_HIGH>; /* PG9 */
    usb0_id_det-gpios = <&pio 6 9 GPIO_ACTIVE_HIGH>; /* PG9 */
	usb0_vbus_det = <&pio 1 10 GPIO_ACTIVE_HIGH>; /* PB10 */
	/* usb0_vbus-supply = <&reg_usb0_vbus>; */ /* TODO: from AXP */
	status = "okay";
};


&cedarx {
    status = "okay";
};

&ion {
    status = "okay";
};


